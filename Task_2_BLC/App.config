<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="fileSection"
             type="Task_2_BLC.Configuration.FileConfigurationSection, Task_2_BLC"/>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
  <fileSection culture="en-US">
    <directories>
      <directory path="C:\folderForTask2"/>
    </directories>
    <rules defaultFolder="C:\folderForTask2\defaultFolder">
      <rule filePattern="1.*" isOrderAppended="true" isDateAppended="true" destFolder="C:\folderForTask2\pattern1"/>
      <rule filePattern="2.*" isOrderAppended="true" isDateAppended="false" destFolder="C:\folderForTask2\pattern2"/>
    </rules>
  </fileSection>
</configuration>